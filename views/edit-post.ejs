<%- include('includes/header.ejs') %>

<div class="container py-md-5 container--narrow">
  <% postFormErrors.forEach((message) => { %>
  <div class="alert alert-danger text-center"><%= message %></div>
  <% }) %>

  <a class="small font-weight-bold" href="/post/<%= post.id %>"
    >&larr; Back To Post</a
  >
  <form action="/post/<%= post.id %>/edit" method="POST" class="mt-3">
    <div class="form-group">
      <label for="post-title" class="text-muted mb-1"
        ><small>Title</small></label
      >
      <input name="title" id="post-title" class="form-control form-control-lg
      form-control-title" type="text" placeholder="" autocomplete="off"
      value="<%= post.title %>"" />
    </div>

    <div class="form-group">
      <label for="post-body" class="text-muted mb-1"
        ><small>Body Content</small></label
      >
      <textarea
        name="body"
        id="post-body"
        class="body-content tall-textarea form-control"
        type="text"
      >
<%= post.body %></textarea
      >
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <button class="btn btn-primary">Save Updates</button>
  </form>
</div>

<%- include('includes/footer.ejs') %>
